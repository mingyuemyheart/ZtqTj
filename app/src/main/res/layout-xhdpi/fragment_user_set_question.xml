<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="@dimen/dimen10"
    android:background="@color/bg_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen10"
        android:gravity="top"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/question_1"
            android:textColor="@color/text_black_common"
            android:textSize="@dimen/text_content"/>

        <RelativeLayout
            android:id="@+id/layout_question_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_dropdown">

            <ImageView
                android:id="@+id/ic_dropdown_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_dropdown"
                android:layout_alignParentRight="true"
                />

            <TextView
                android:id="@+id/popup_question_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:gravity="left"
                android:layout_toLeftOf="@id/ic_dropdown_1"
                android:textColor="@color/text_black_common"
                android:textSize="@dimen/text_content"/>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen10">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:text="@string/answer"
            android:textColor="@color/text_black_common"
            android:textSize="@dimen/text_content" />

        <EditText
            android:id="@+id/et_answer_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:maxLength="5"
            android:hint="@string/hint_question_tip"
            android:textColor="@color/text_black_common"
            android:textColorHint="@color/hint"
            android:textSize="@dimen/text_content"
            android:background="@null"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tv1"
            android:layout_toEndOf="@+id/tv1"
            android:layout_marginLeft="@dimen/dimen10"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/dimen4"
            android:layout_marginLeft="@dimen/dimen10"
            android:layout_toRightOf="@id/tv1"
            android:layout_below="@id/et_answer_1"
            android:background="@drawable/line_common"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/question_2"
            android:textColor="@color/text_black_common"
            android:textSize="@dimen/text_content"/>



        <RelativeLayout
            android:id="@+id/layout_question_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_dropdown">

            <ImageView
                android:id="@+id/ic_dropdown_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_dropdown"
                android:layout_alignParentRight="true"
                />

            <TextView
                android:id="@+id/popup_question_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:gravity="left"
                android:layout_toLeftOf="@id/ic_dropdown_2"
                android:textColor="@color/text_black_common"
                android:textSize="@dimen/text_content"/>



        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/dimen10">

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/answer"
            android:textColor="@color/text_black_common"
            android:textSize="@dimen/text_content" />

        <EditText
            android:id="@+id/et_answer_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:maxLength="5"
            android:hint="@string/hint_question_tip"
            android:textColor="@color/text_black_common"
            android:textColorHint="@color/hint"
            android:textSize="@dimen/text_content"
            android:background="@null"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tv2"
            android:layout_toEndOf="@+id/tv2"
            android:layout_marginLeft="@dimen/dimen10"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/dimen4"
            android:layout_marginLeft="@dimen/dimen10"
            android:layout_toRightOf="@id/tv2"
            android:layout_below="@id/et_answer_2"
            android:background="@drawable/line_common"/>

    </RelativeLayout>

</LinearLayout>