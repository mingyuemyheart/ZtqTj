<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/icon_health_bot"
              android:padding="10dp"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_heallife_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_lev_01"
                android:layout_width="35dp"
                android:padding="5dp"
                android:gravity="center"
                android:background="@drawable/corner_view_gray"
                android:layout_height="20dp"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_footnote"/>
            <TextView
                android:id="@+id/tv_lev_02"
                android:layout_width="35dp"
                android:layout_marginLeft="1dp"
                android:padding="5dp"
                android:gravity="center"
                android:background="@drawable/corner_view_gray"
                android:layout_height="20dp"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_footnote"/>
            <TextView
                android:id="@+id/tv_lev_03"
                android:layout_width="35dp"
                android:padding="5dp"
                android:layout_marginLeft="1dp"
                android:gravity="center"
                android:background="@drawable/corner_view_gray"
                android:layout_height="20dp"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_footnote"/>
            <TextView
                android:id="@+id/tv_lev_04"
                android:layout_width="35dp"
                android:padding="5dp"
                android:layout_marginLeft="1dp"
                android:gravity="center"
                android:background="@drawable/corner_view_gray"
                android:layout_height="20dp"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_footnote"/>
            <TextView
                android:id="@+id/tv_lev_05"
                android:layout_width="35dp"
                android:padding="5dp"
                android:layout_marginLeft="1dp"
                android:gravity="center"
                android:background="@drawable/corner_view_gray"
                android:layout_height="20dp"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_footnote"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/text_white"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_heallife_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="防范人群："
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_content"/>

        <TextView
            android:id="@+id/tv_heallife_suggest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="防范建议："
            android:lineSpacingMultiplier="1.3"
            android:textColor="@color/text_white"
            android:textSize="16dp"/>
    </LinearLayout>

</LinearLayout>