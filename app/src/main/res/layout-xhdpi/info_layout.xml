<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 大 -->

            <ImageView
                android:id="@+id/head_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/ms_top_bg"
                android:clickable="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_alignBottom="@id/head_iv"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_bottom_bg_02"
                android:gravity="center"
                android:text="@string/weather_reading"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_content" />
        </RelativeLayout>

        <com.pcs.ztqtj.view.myview.MyGridView
            android:id="@+id/channel_gridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:horizontalSpacing="10dp"
            android:verticalSpacing="10dp"
            android:numColumns="2"
            android:stretchMode="columnWidth"
             />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical" >

            <!-- 大 -->

            <ImageView
                android:id="@+id/bottom_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/ms_bottom_bg"
                android:clickable="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_alignBottom="@id/bottom_iv"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_bottom_bg_02"
                android:gravity="center"
                android:text="@string/reading_picture"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_content" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>