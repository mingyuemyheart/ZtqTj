<?xml version="1.0" encoding="utf-8"?>
<!-- 网格预报 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <!-- 时间 -->

    <TextView
        android:id="@+id/text_time"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/time"
        android:textColor="@color/map_forecast_list_text"
        android:textSize="@dimen/text_content" />

    <ImageView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/map_forecast_line" />
    <!-- 天气 -->

    <TextView
        android:id="@+id/text_weather"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/weather"
        android:textColor="@color/map_forecast_list_text"
        android:textSize="@dimen/text_content" />

    <ImageView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/map_forecast_line" />
    <!-- 温度 -->

    <TextView
        android:id="@+id/text_temperature"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/temperature"
        android:textColor="@color/map_forecast_list_text"
        android:textSize="@dimen/text_content" />

    <ImageView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/map_forecast_line" />
    <!-- 降水量 -->

    <TextView
        android:id="@+id/text_rainfall"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/rainfall"
        android:textColor="@color/map_forecast_list_text"
        android:textSize="@dimen/text_content" />

    <ImageView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/map_forecast_line" />
    <!-- 能见度 -->

    <TextView
        android:id="@+id/text_visibility"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/mvisibility"
        android:textColor="@color/map_forecast_list_text"
        android:textSize="@dimen/text_content"
        android:visibility="gone"/>

    <!-- 风向 -->
    <TextView
        android:id="@+id/text_winddir"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/wind_direction"
        android:textColor="@color/map_forecast_list_text"
        android:textSize="@dimen/text_content" />

    <ImageView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/map_forecast_line" />

    <!-- 风速 -->
    <TextView
        android:id="@+id/text_windspeed"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/wind_power"
        android:textColor="@color/map_forecast_list_text"
        android:textSize="@dimen/text_content" />

</LinearLayout>