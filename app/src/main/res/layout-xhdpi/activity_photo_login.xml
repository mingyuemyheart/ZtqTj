<?xml version="1.0" encoding="utf-8"?>
<!-- 登录页 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="@dimen/dimen16" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">
        <!-- 账号 -->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen8"
            android:paddingRight="@dimen/dimen8"
            android:orientation="horizontal"
            android:background="@drawable/bg_login_input" >

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="30dp"
                android:layout_height="wrap_content" >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_login_phone" />
            </RelativeLayout>

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/dimen8"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_content"
                android:paddingLeft="10dp"
                android:textColor="@color/text_black_login"
                android:textColorHint="@color/hint"
                android:hint="@string/phone_hint"
                android:singleLine="true"
                android:background="@null" />

            <ImageButton
                android:id="@+id/btn_old_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_clear_input_sel" />
        </LinearLayout>

        <!-- 密码 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen8"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen8"
            android:paddingRight="@dimen/dimen8"
            android:orientation="horizontal"
            android:background="@drawable/bg_login_input" >

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="30dp"
                android:layout_height="wrap_content" >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_login_password" />
            </RelativeLayout>

            <EditText
                android:id="@+id/et_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/dimen8"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_content"
                android:textColor="@color/text_black_login"
                android:textColorHint="@color/hint"
                android:hint="@string/password_hint"
                android:password="true"
                android:maxLength="16"
                android:singleLine="true"
                android:background="@null" />

            <ImageButton
                android:id="@+id/btn_clear_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_clear_input_sel" />
        </LinearLayout>

        <!-- 找回密码、修改密码 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen8" >

            <TextView
                android:id="@+id/tv_find_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/text_blue_login"
                android:text="@string/find_password"
                android:textSize="@dimen/text_content"
                android:drawableRight="@drawable/icon_arrow_blue"
                android:drawablePadding="@dimen/dimen4" />

            <TextView
                android:id="@+id/tv_change_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/text_blue_login"
                android:text="@string/change_password_2"
                android:textSize="@dimen/text_content"
                android:drawableRight="@drawable/icon_arrow_blue"
                android:drawablePadding="@dimen/dimen4" />
        </RelativeLayout>

        <!-- 登录按钮 -->
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen8"
            android:text="@string/login"
            android:textSize="@dimen/text_content"
            android:textColor="@color/text_white"
            android:background="@drawable/btn_login_02_sel" />

        <!-- 注册 -->
        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dimen8"
            android:textColor="@color/text_blue_login"
            android:text="@string/register_now"
            android:textSize="@dimen/text_content"
            android:drawableRight="@drawable/icon_arrow_blue"
            android:drawablePadding="@dimen/dimen4" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_weight="1">


        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical" >

            <!-- 第三方登录提醒 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen8"
                android:textColor="@color/text_blue_login"
                android:text="@string/login_other_way"
                android:textSize="@dimen/text_content" />

            <!-- 第三方登录按钮 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen16"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/btn_weixin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_login_weixin" />

                <ImageButton
                    android:id="@+id/btn_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/dimen40"
                    android:layout_marginRight="@dimen/dimen40"
                    android:background="@drawable/icon_login_qq" />

                <ImageButton
                    android:id="@+id/btn_sina"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_login_sina" />
            </LinearLayout>

            <!-- 知天气提醒 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen16"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/line__white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen20"
                    android:layout_marginRight="@dimen/dimen20"
                    android:text="@string/ztq_hint"
                    android:textSize="@dimen/text_content"
                    android:textColor="@color/text_black_common" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/line__white" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen8"
                android:text="@string/ztp_hint_content"
                android:textSize="@dimen/text_content"
                android:textColor="@color/text_black_common" />

            <!-- 许可协议超链接 -->
            <TextView
                android:id="@+id/tv_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/text_content" />

            <TextView
                android:id="@+id/tv_permission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/text_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>