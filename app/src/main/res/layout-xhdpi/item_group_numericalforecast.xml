<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_bg_num"
    android:orientation="vertical" >
    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/activity_marginleft_right"
        android:src="@drawable/icon_right_num" />

    <TextView
        android:id="@+id/number_group_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/icon"
        android:drawableLeft="@drawable/icon_left_num"
        android:padding="@dimen/activity_marginleft_right"
        android:textColor="@color/text_white"
        android:textSize="@dimen/text_content" />

</RelativeLayout>