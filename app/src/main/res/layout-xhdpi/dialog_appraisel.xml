<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingTop="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen24"
        android:gravity="center"
        android:text="该栏目仅限内部人员使用。"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/tv_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen16"
            android:layout_marginLeft="@dimen/dimen16"
            android:background="@drawable/bg_set_edittext"
            android:hint="请输入指定口令"
            android:padding="@dimen/dimen8"
            android:singleLine="true"
            android:textColor="@color/text_black"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/text_content" />
    </LinearLayout>
</LinearLayout>