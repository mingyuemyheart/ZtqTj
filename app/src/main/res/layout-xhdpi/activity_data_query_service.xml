<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_white"
              android:orientation="vertical">

    <!-- 个人中心 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/image_warning_manage"
        android:orientation="vertical"
        android:padding="@dimen/dimen20">

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_welcome_unlogin"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_content"/>

        <!-- 用户头像 -->

        <ImageView
            android:id="@+id/image_user"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:layout_marginTop="@dimen/dimen10"
            android:scaleType="fitCenter"
            android:src="@drawable/head_default"
            android:visibility="visible"/>
    </LinearLayout>

    <!-- 还未开通权限布局 -->

    <LinearLayout
        android:id="@+id/layout_no_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen10"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_data_query_customize"
            android:gravity="center_vertical"
            android:text="@string/data_query_not_pay"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_content"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_footnote"
            android:layout_margin="@dimen/dimen10"
            android:textColor="@color/mgrey"
            android:text="@string/data_query_pay_tips"
            />

    </LinearLayout>

    <!-- 已开通权限布局 -->

    <LinearLayout
        android:id="@+id/layout_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen10"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_data_query_customize"
            android:gravity="center_vertical"
            android:text="@string/data_query_already_pay"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_content"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="@dimen/dimen10"
            >

            <CheckBox
                android:id="@+id/btn_continue"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/btn_rain_info"
                android:text="@string/continue_service"
                android:gravity="center"
                android:button="@null"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dimen10"
                android:paddingRight="@dimen/dimen10"
                android:layout_toLeftOf="@id/btn_continue"
                android:layout_centerVertical="true"
                >

                <TextView
                    android:id="@+id/tv_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订购时间："
                    android:textSize="@dimen/text_content"
                    android:textColor="@color/text_black_common"
                    />
                <TextView
                    android:id="@+id/tv_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="到期时间："
                    android:textSize="@dimen/text_content"
                    android:textColor="@color/text_black_common"
                    />

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

    <!-- 支付页 -->
    <LinearLayout
        android:id="@+id/layout_pay"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dimen10"
        android:background="@color/bg_white"
        android:visibility="gone"
        >

        <!-- 服务期限 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text_select_service_time"
                android:textSize="@dimen/text_content"
                android:textColor="@color/text_black"  />

            <TextView
                android:id="@+id/btn_set_meal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/dimen5"
                android:text="@string/text_select_service_time"
                android:textSize="@dimen/text_content"
                android:textColor="@color/text_black"
                android:background="@drawable/btn_warning_type" />
        </LinearLayout>

        <!-- 资费说明 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen10"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hint_tariff"
                android:textSize="@dimen/text_content"
                android:textColor="@color/text_black" />

            <TextView
                android:id="@+id/tv_tariff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_content"
                android:textColor="@color/text_black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dimen10"
            android:background="@color/text_gray_light" />

        <!-- 支付方式 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen10"
                android:text="@string/text_select_pay_type"
                android:textSize="@dimen/text_content"
                android:textColor="@color/text_black" />

            <RadioGroup
                android:id="@+id/rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_weixin"
                    style="@style/PayCheckBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:drawableLeft="@drawable/image_pay_by_weixin"
                    />

                <RadioButton
                    android:id="@+id/rb_alipay"
                    style="@style/PayCheckBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dimen10"
                    android:drawableLeft="@drawable/image_pay_by_alipay"/>

            </RadioGroup>
        </LinearLayout>

        <!-- 确认按钮 -->
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen10"
            android:text="@string/text_confirm_pay"
            android:textSize="@dimen/text_content"
            android:textColor="@color/text_white"
            android:background="@drawable/btn_login_02" />
    </LinearLayout>


</LinearLayout>