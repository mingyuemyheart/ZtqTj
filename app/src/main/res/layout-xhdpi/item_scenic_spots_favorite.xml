<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/alpha100"
    android:gravity="center"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/ll_default"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginLeft="@dimen/dimen10"
        android:layout_marginRight="@dimen/dimen10"
        android:background="@drawable/bg_itme_favorite"
        android:gravity="center"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/tv_scenic_spots_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen10"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/text_black_common"
            android:textSize="@dimen/text_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/line_common" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen10"
            android:gravity="center" >
            <ImageView
                android:id="@+id/iv_weather_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="@dimen/dimen10"
                android:background="@drawable/bg_itme_favorite_weather"
                android:padding="@dimen/dimen4" />
            <TextView
                android:id="@+id/tv_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/text_black_common"
            	android:textSize="@dimen/text_content" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <Button
                android:id="@+id/btn_favorite_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/btn_item_favorite_delete" />
            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="28dp"
                android:text=""
                android:textColor="@color/text_black_common"
            	android:textSize="@dimen/text_content" />
        </RelativeLayout>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/ll_add"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginLeft="@dimen/dimen10"
        android:layout_marginRight="@dimen/dimen10"
        android:background="@drawable/bg_itme_favorite"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/btn_travel_bookmark_add" />
        
    </LinearLayout>
    
</LinearLayout>