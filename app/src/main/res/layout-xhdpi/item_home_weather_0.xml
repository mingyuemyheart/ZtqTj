<?xml version="1.0" encoding="utf-8"?><!-- 首页天气第0行（日历、集成按钮、预警等） -->
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvNews1Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#30000000"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingTop="8dp"
            android:paddingEnd="10dp"
            android:paddingBottom="8dp"
            android:textColor="#7BBAFF"
            android:textSize="@dimen/dimen12"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNews1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="#30000000"
            android:paddingStart="10dp"
            android:paddingTop="8dp"
            android:paddingEnd="10dp"
            android:paddingBottom="8dp"
            android:textColor="#7BBAFF"
            android:textSize="@dimen/dimen12"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent" />

        <TextSwitcher
            android:id="@+id/tvNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="#30000000"
            android:inAnimation="@anim/push_up_in"
            android:outAnimation="@anim/push_up_out"
            android:paddingStart="10dp"
            android:paddingTop="8dp"
            android:paddingEnd="10dp"
            android:paddingBottom="8dp"
            android:textColor="#7BBAFF"
            android:textSize="@dimen/dimen12"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/ivFestival"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clMessage" />

    <ImageView
        android:id="@+id/ivShare"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/bt_share"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clMessage" />

    <ImageView
        android:id="@+id/ivCamera"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:src="@mipmap/bt_real"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivShare" />

    <ImageView
        android:id="@+id/main_voice"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/ivCamera"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/btn_mainvoice_nor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivCamera" />

    <com.pcs.ztqtj.view.myview.MainViewPager
        android:id="@+id/viewPager"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvWarning1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:textColor="@color/text_white"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_voice" />

    <LinearLayout
        android:id="@+id/llWarning1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/tvWarning1"
        app:layout_constraintStart_toEndOf="@+id/tvWarning1"
        app:layout_constraintTop_toTopOf="@+id/tvWarning1" />

    <TextView
        android:id="@+id/tvWarning2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:textColor="@color/text_white"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWarning1" />

    <LinearLayout
        android:id="@+id/llWarning2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/tvWarning2"
        app:layout_constraintStart_toEndOf="@+id/tvWarning2"
        app:layout_constraintTop_toTopOf="@+id/tvWarning2" />

</android.support.constraint.ConstraintLayout>