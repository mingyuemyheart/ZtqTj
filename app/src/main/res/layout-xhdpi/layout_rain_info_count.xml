<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_choose_time"
    android:orientation="vertical" >
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/line_common" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/water_grid_head_light_blue"
        android:orientation="horizontal" >

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@drawable/line_common_v" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/code"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_footnote" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@drawable/line_common_v" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cities"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_footnote" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@drawable/line_common_v" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/county_city"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_footnote" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@drawable/line_common_v" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/station_name"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_footnote" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@drawable/line_common_v" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/rainfall_sign_"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_footnote" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@drawable/line_common_v" />
    </LinearLayout>
    
	<View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/line_common" />
	
    <ListView
        android:id="@+id/lv_count_rain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@color/alpha100"
        android:divider="@drawable/line_common"
        android:listSelector="@color/alpha100" >
    </ListView>
    
	<View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/line_common" />

</LinearLayout>