<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:id="@+id/lay_back_alpha"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/icon_air_alpha"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <com.pcs.ztqtj.view.myview.FontFitTextView
                android:id="@+id/air_equence"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_weight="2"
                android:gravity="center"
                android:singleLine="true"
                android:text="2"
                android:textColor="#ffffff"/>

            <com.pcs.ztqtj.view.myview.FontFitTextView
                android:id="@+id/air_province"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_weight="3"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="@string/fujian"
                android:textColor="#eeeeee"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginLeft="10dp"
                android:gravity="center">

                <com.pcs.ztqtj.view.myview.FontFitTextView
                    android:singleLine="true"
                    android:id="@+id/air_city"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/fuzhou"
                    android:textColor="#ffffff"/>

                <ImageView
                    android:id="@+id/iv_city_flag"
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/air_local"
                    android:visibility="gone"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_aqi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical">

                <com.pcs.ztqtj.view.myview.typhoon.AutoFitTextView
                    android:id="@+id/air_num"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/color_green"
                    android:gravity="center"
                    android:textColor="#0e0e0e"/>

                <ImageView
                    android:id="@+id/iv_num_flag"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    />

                <com.pcs.ztqtj.view.myview.FontFitTextView
                    android:id="@+id/air_num_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>