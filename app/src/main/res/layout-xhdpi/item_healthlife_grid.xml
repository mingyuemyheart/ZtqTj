<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/icon_health_grid"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_health_label"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3">

                <TextView
                    android:id="@+id/tv_heallife_grid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/text_white"
                    android:textSize="13dp"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_health_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="今"
            android:textColor="@color/text_white"
            android:textSize="@dimen/dimen15"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/tv_grid_s"
                android:layout_width="0dp"
                android:layout_height="17dp"
                android:layout_weight="1"
                android:background="@drawable/corner_view_gray"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_footnote"/>

            <TextView
                android:id="@+id/tv_grid_m"
                android:layout_width="0dp"
                android:layout_height="17dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/corner_view_gray"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_footnote"/>

            <TextView
                android:id="@+id/tv_grid_l"
                android:layout_width="0dp"
                android:layout_height="17dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/corner_view_gray"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_footnote"/>

            <TextView
                android:id="@+id/tv_grid_xl"
                android:layout_width="0dp"
                android:layout_height="17dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/corner_view_gray"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_footnote"/>

            <TextView
                android:id="@+id/tv_grid_xxl"
                android:layout_width="0dp"
                android:layout_height="17dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/corner_view_gray"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_footnote"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_health_time_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="明"
            android:textColor="@color/text_white"
            android:textSize="@dimen/dimen15"/>


        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/tv_grid_s_s"
                android:layout_width="0dp"
                android:layout_height="17dp"
                android:layout_weight="1"
                android:background="@drawable/corner_view_gray"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_footnote"/>

            <TextView
                android:id="@+id/tv_grid_s_m"
                android:layout_width="0dp"
                android:layout_height="17dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/corner_view_gray"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_footnote"/>

            <TextView
                android:id="@+id/tv_grid_s_l"
                android:layout_width="0dp"
                android:layout_height="17dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/corner_view_gray"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_footnote"/>

            <TextView
                android:id="@+id/tv_grid_s_xl"
                android:layout_width="0dp"
                android:layout_height="17dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/corner_view_gray"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_footnote"/>

            <TextView
                android:id="@+id/tv_grid_s_xxl"
                android:layout_width="0dp"
                android:layout_height="17dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/corner_view_gray"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_footnote"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>