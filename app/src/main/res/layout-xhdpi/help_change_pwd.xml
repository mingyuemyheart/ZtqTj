<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/toastinfomation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen8"
        android:layout_marginLeft="@dimen/dimen10"
        android:layout_marginRight="@dimen/dimen10"
        android:layout_marginTop="@dimen/dimen8"
        android:textColor="@color/mblue"
        android:textSize="17dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen10"
        android:layout_marginRight="@dimen/dimen10"
        android:layout_marginTop="@dimen/dimen10"
        android:background="@drawable/input_box_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_marginTop="1dip">

            <TextView
                android:id="@+id/curr_pwd_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen10"
                android:text="@string/text_curr_pwd"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/del_curr_pwd_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen10"
                android:src="@drawable/del_btn" />

            <EditText
                android:id="@+id/curr_pwd_et"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/dimen10"
                android:layout_marginRight="@dimen/dimen10"
                android:layout_toLeftOf="@id/del_curr_pwd_iv"
                android:layout_toRightOf="@id/curr_pwd_tv"
                android:background="@null"
                android:hint="@string/input_tips_curr_pwd"
                android:singleLine="true"
                android:textColor="#2E2E2E"
                android:textColorHint="@color/hint"
                android:textSize="17dp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/gray" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_marginTop="1dip">

            <TextView
                android:id="@+id/new_pwd_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen10"
                android:text="@string/text_new_pwd"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/del_new_pwd_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen10"
                android:src="@drawable/del_btn" />

            <EditText
                android:id="@+id/new_pwd_et"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/dimen10"
                android:layout_marginRight="@dimen/dimen10"
                android:layout_toLeftOf="@id/del_new_pwd_iv"
                android:layout_toRightOf="@id/new_pwd_tv"
                android:background="@null"
                android:hint="@string/input_tips_new_pwd"
                android:password="true"
                android:singleLine="true"
                android:textColor="#2E2E2E"
                android:textColorHint="@color/hint"
                android:textSize="17dp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/gray" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_marginTop="1dip">

            <TextView
                android:id="@+id/repwd_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen10"
                android:text="@string/text_repwd_req"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/del_repwd_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen10"
                android:src="@drawable/del_btn" />

            <EditText
                android:id="@+id/repwd_et"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/dimen10"
                android:layout_marginRight="@dimen/dimen10"
                android:layout_toLeftOf="@id/del_repwd_iv"
                android:layout_toRightOf="@id/repwd_tv"
                android:background="@null"
                android:hint="@string/input_tips_re_pwd"
                android:password="true"
                android:singleLine="true"
                android:textColor="#2E2E2E"
                android:textColorHint="@color/hint"
                android:textSize="17dp" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/save_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen10"
        android:layout_marginRight="@dimen/dimen10"
        android:layout_marginTop="@dimen/dimen10"
        android:background="@drawable/commom_button"
        android:paddingBottom="@dimen/dimen8"
        android:paddingTop="@dimen/dimen8"
        android:text="@string/text_re_update"
        android:textColor="@android:color/white"
        android:textSize="17dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen10"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen10">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:src="@drawable/input_tips" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="@dimen/dimen5"
            android:text="@string/forgetpwd"
            android:textColor="@color/text_gray"
            android:textSize="15dp" />
    </LinearLayout>

</LinearLayout>