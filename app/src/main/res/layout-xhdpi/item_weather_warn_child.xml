<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:padding="@dimen/activity_margintop" >

    <ImageView
        android:id="@+id/warn_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/activity_margintop" />

    <TextView
        android:id="@+id/warn_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/warn_image"
        android:singleLine="true"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_content" />

    <!--<TextView-->
        <!--android:id="@+id/warn_info"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@id/warn_title"-->
        <!--android:layout_toRightOf="@id/warn_image"-->
        <!--android:singleLine="true"-->
        <!--android:textColor="@color/text_black"-->
        <!--android:textSize="15dp" />-->

    <LinearLayout
        android:layout_below="@id/warn_title"
        android:layout_toRightOf="@id/warn_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/warn_info"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_footnote" />
        <TextView
            android:id="@+id/tv_warn_info_flag"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_footnote"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</RelativeLayout>