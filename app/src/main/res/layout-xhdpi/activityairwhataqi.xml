<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_title"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/activity_margintop"
            android:textColor="@color/text_white"
            android:text="@string/entry"
            android:textSize="@dimen/text_subtitle" />

        <Button
            android:id="@+id/close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen5"
            android:background="@drawable/btn_close_white"
             />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        >
        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/contenttv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:lineSpacingMultiplier="1.3"
                android:padding="@dimen/activity_margintop"
                android:text="@string/air_what_aqi"
                android:background="@color/bg_white"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/line_common" />

            <Button
                android:id="@+id/positivebutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dialog_btn"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_content" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>