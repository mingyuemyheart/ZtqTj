<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/layout_head"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/rb_rain"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_distribution"
            android:button="@null"
            android:gravity="center"
            android:text="雨量"
            android:textColor="@color/text_distribution"
            android:textSize="16dp" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_distribution"
            android:button="@null"
            android:gravity="center"
            android:text="气温"
            android:textColor="@color/text_distribution"
            android:textSize="16dp" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_distribution"
            android:button="@null"
            android:gravity="center"
            android:text="风速"
            android:textColor="@color/text_distribution"
            android:textSize="16dp" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_distribution"
            android:button="@null"
            android:gravity="center"
            android:text="能见度"
            android:textColor="@color/text_distribution"
            android:textSize="16dp" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_distribution"
            android:button="@null"
            android:gravity="center"
            android:text="气压"
            android:textColor="@color/text_distribution"
            android:textSize="16dp" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_distribution"
            android:button="@null"
            android:gravity="center"
            android:text="相对湿度"
            android:textColor="@color/text_distribution"
            android:textSize="16dp" />

    </RadioGroup>

    <com.amap.api.maps.TextureMapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_head"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/layout_drow"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_head"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_menu_drow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:listSelector="@color/alpha100"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/rb_sb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableLeft="@drawable/btn_distribution_sb"
                        android:drawablePadding="@dimen/dimen10"
                        android:gravity="center"
                        android:padding="@dimen/dimen4"
                        android:text="色斑图"
                        android:textColor="@color/color_distribution"
                        android:textSize="@dimen/text_footnote" />

                    <CheckBox
                        android:id="@+id/rb_gj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableLeft="@drawable/btn_distribution_gj"
                        android:drawablePadding="@dimen/dimen10"
                        android:gravity="center"
                        android:paddingBottom="@dimen/dimen4"
                        android:paddingLeft="@dimen/dimen4"
                        android:paddingRight="@dimen/dimen4"
                        android:text="国家站"
                        android:textColor="@color/color_distribution"
                        android:textSize="@dimen/text_footnote" />

                    <CheckBox
                        android:id="@+id/rb_db"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableLeft="@drawable/btn_distribution_db"
                        android:drawablePadding="@dimen/dimen10"
                        android:gravity="center"
                        android:paddingBottom="@dimen/dimen4"
                        android:paddingLeft="@dimen/dimen4"
                        android:paddingRight="@dimen/dimen4"
                        android:text="代表站"
                        android:textColor="@color/color_distribution"
                        android:textSize="@dimen/text_footnote" />

                    <CheckBox
                        android:id="@+id/rb_zd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableLeft="@drawable/btn_distribution_zd"
                        android:drawablePadding="@dimen/dimen10"
                        android:gravity="center"
                        android:paddingBottom="@dimen/dimen4"
                        android:paddingLeft="@dimen/dimen4"
                        android:paddingRight="@dimen/dimen4"
                        android:text="自动站"
                        android:textColor="@color/color_distribution"
                        android:textSize="@dimen/text_footnote" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_radar_typhoon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@drawable/line_common" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:listSelector="@color/alpha100"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/layout_radar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <CheckBox
                                android:id="@+id/rb_radar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@null"
                                android:drawableLeft="@drawable/btn_distribution_radio"
                                android:drawablePadding="@dimen/dimen10"
                                android:gravity="center"
                                android:paddingBottom="@dimen/dimen4"
                                android:paddingLeft="@dimen/dimen4"
                                android:paddingRight="@dimen/dimen4"
                                android:text="雷达"
                                android:textColor="@color/color_distribution"
                                android:textSize="@dimen/text_footnote"/>

                            <CheckBox
                                android:id="@+id/rb_radar_play"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/dimen10"
                                android:button="@null"
                                android:drawableRight="@drawable/btn_distribution_play"
                                android:enabled="false"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                        <CheckBox
                            android:id="@+id/rb_cloud"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:drawableLeft="@drawable/btn_distribution_cloud"
                            android:drawablePadding="@dimen/dimen10"
                            android:gravity="center"
                            android:paddingBottom="@dimen/dimen4"
                            android:paddingLeft="@dimen/dimen4"
                            android:paddingRight="@dimen/dimen4"
                            android:text="云图"
                            android:textColor="@color/color_distribution"
                            android:textSize="@dimen/text_footnote"/>

                            <CheckBox
                                android:id="@+id/rb_cloud_play"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginLeft="@dimen/dimen10"
                                android:button="@null"
                                android:drawableRight="@drawable/btn_distribution_play"
                                android:layout_gravity="center_vertical"
                                android:enabled="false"
                                />

                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@drawable/line_common" />

                    <CheckBox
                        android:id="@+id/cb_typhoon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableLeft="@drawable/btn_distribution_typhoon"
                        android:drawablePadding="@dimen/dimen10"
                        android:gravity="center"
                        android:padding="@dimen/dimen4"
                        android:text="台风"
                        android:textColor="@color/color_distribution"
                        android:textSize="@dimen/text_footnote" />
                </LinearLayout>

            </LinearLayout>

            <CheckBox
                android:id="@+id/cb_tl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_legend"
                android:button="@null"
                android:gravity="center"
                android:padding="@dimen/dimen4"
                android:text="图例"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_footnote" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/cb_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/checkbox_view"
            android:button="@null"
            android:checked="true" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/main_drop_down_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_head"
        android:layout_marginTop="@dimen/dimen4"
        android:layout_toRightOf="@id/layout_drow"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/layout_site"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginLeft="@dimen/dimen4"
            android:layout_weight="4"
            android:background="@drawable/bg_input_box"
            android:padding="1px"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_site"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_footnote" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen4"
                android:src="@drawable/icon_livequery_arrow_down" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen4"
            android:layout_weight="6">


            <RelativeLayout
                android:id="@+id/layout_drop_search"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_input_box"
                android:padding="1px">

                <RelativeLayout
                    android:id="@+id/layout_drop_down"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_drop_down"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_footnote" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dimen4"
                        android:src="@drawable/icon_livequery_arrow_down" />

                </RelativeLayout>

            </RelativeLayout>

            <ListView
                android:id="@+id/list_station"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/layout_drop_search"
                android:layout_below="@id/layout_drop_search"
                android:layout_marginLeft="@dimen/dimen2"
                android:layout_marginRight="@dimen/dimen2"
                android:layout_marginTop="-2dp"
                android:background="@color/bg_white"
                android:cacheColorHint="@android:color/transparent"
                android:divider="@color/bg_black_alpha70"
                android:dividerHeight="1px"
                android:listSelector="@android:color/transparent"
                android:visibility="gone" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_public_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/main_drop_down_layout"
        android:layout_marginRight="@dimen/dimen10"
        android:layout_marginTop="@dimen/dimen10"
        android:text=""
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_footnote" />

    <RelativeLayout
        android:id="@+id/layout_typhoon_legend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="vertical">



        <FrameLayout
            android:id="@+id/layout_above"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            >

            <ListView
                android:id="@+id/lv_typhoon_list"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:divider="@android:color/transparent"
                android:dividerHeight="@dimen/dimen4"
                android:listSelector="@android:color/transparent"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/tv_null_typhoon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@color/text_white"
                android:layout_gravity="left|bottom"
                android:textColor="@color/text_black"
                android:textSize="@dimen/dimen14"
                android:text="当前无台风"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                />

            <TextView
                android:id="@+id/tv_play_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:textSize="@dimen/text_footnote"
                android:textColor="@color/bg_white"
                android:background="#515151"
                android:padding="@dimen/dimen4"
                android:visibility="gone"
                />

        </FrameLayout>
        
        <RelativeLayout
            android:id="@+id/layout_legend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_above"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/iv_legend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <ImageView
                android:id="@+id/btn_legend_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/dimen10"
                android:padding="@dimen/dimen4"
                android:src="@drawable/btn_legend_close" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>