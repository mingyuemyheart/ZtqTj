<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white">

    <LinearLayout
        android:id="@+id/layout_head"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_city_manager_title"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_marginleft_right"
        android:paddingTop="10dp"
        android:paddingRight="@dimen/activity_marginleft_right"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <!-- 回退按钮 -->

            <!-- 编辑按钮 -->

            <LinearLayout
                android:id="@+id/closefragement"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_closefragement"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/btn_city_home"
                    android:gravity="center"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_footnote" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/editcity"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/btn_city_manager"
                    android:gravity="center"
                    android:text="@string/edit"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_footnote" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/manager_city"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_the_page_title" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rel_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_head"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical">

        <!-- 自动定位文字 -->

        <TextView
            android:id="@+id/showLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/auto_location"
            android:textColor="@color/text_black_common"
            android:textSize="@dimen/text_content" />

        <!-- 自动定位按钮 -->

        <CheckBox
            android:id="@+id/cb_auto_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/checkbox_commom"
            android:button="@null"
            android:checked="true"
            android:focusable="false" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rel_head"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingRight="15dp">

            <!-- 城市列表 -->

            <com.pcs.ztqtj.view.myview.MyListView
                android:id="@+id/fracitylistview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:listSelector="@android:color/transparent" />

            <LinearLayout
                android:id="@+id/layout_city_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/addcity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_citymanager_addctiybtns" />

                <TextView
                    android:id="@+id/city_state_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/activity_marginleft_right"
                    android:layout_marginBottom="@dimen/activity_marginleft_right"
                    android:paddingLeft="10dp"
                    android:text="添加城市"
                    android:textColor="@color/text_black_common"
                    android:textSize="@dimen/text_content" />
                <!-- 添加按钮 -->

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>