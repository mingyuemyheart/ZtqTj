        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_jyqddjhf"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dimen4"
                android:background="@drawable/btn_livequery_commom"
                android:singleLine="true"
                android:text="统计说明"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_footnote" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/btn_jyqddjhf"
                android:background="@drawable/bg_livequerytitle"
                android:paddingBottom="@dimen/activity_margintop"
                android:paddingLeft="@dimen/activity_margintop"
                android:paddingTop="@dimen/activity_margintop"
                android:singleLine="true"
                android:text="@string/rain_chart2"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_content" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/level_hour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_likespinnertextview"
                android:drawableRight="@drawable/bg_livequery_drowdown"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/text_black" />

            <TextView
                android:id="@+id/level_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@drawable/bg_likespinnertextview"
                android:drawableRight="@drawable/bg_livequery_drowdown"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/text_black" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dimen8"
            android:layout_height="wrap_content">
            <com.pcs.ztqtj.view.myview.MyListView
                android:id="@+id/livequery_max_rainfall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:cacheColorHint="@color/alpha100"
                android:divider="@drawable/line_common"
                android:footerDividersEnabled="true"
                android:listSelector="@color/alpha100" />

            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_livequerytitle">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_margintop"
                android:paddingLeft="@dimen/activity_margintop"
                android:paddingTop="@dimen/activity_margintop"
                android:singleLine="true"
                android:text="@string/rain_rank2"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_content" />
        </RelativeLayout>

        <com.pcs.ztqtj.view.myview.MyListView
            android:id="@+id/_1_3_hour_max"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_white"
            android:cacheColorHint="@color/alpha100"
            android:divider="@drawable/line_common"
            android:footerDividersEnabled="true"
            android:listSelector="@color/alpha100" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_livequerytitle"
            android:paddingBottom="2dp"
            android:paddingRight="2dp">

            <TextView
                android:id="@+id/livequery_totime"
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/bg_likespinnertextview"
                android:drawableRight="@drawable/bg_livequery_drowdown"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/one_hour"
                android:textColor="@color/text_black" />

            <TextView
                android:id="@+id/description_title_search2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/livequery_totime"
                android:paddingLeft="@dimen/activity_margintop"
                android:singleLine="true"
                android:text="@string/rain_rank1"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_content" />
        </RelativeLayout>

        <com.pcs.ztqtj.view.myview.MyListView
            android:id="@+id/livequery_auto_rainfall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_white"
            android:cacheColorHint="@color/alpha100"
            android:divider="@drawable/line_common"
            android:footerDividersEnabled="true"
            android:listSelector="@color/alpha100" />
    </LinearLayout>

</ScrollView>