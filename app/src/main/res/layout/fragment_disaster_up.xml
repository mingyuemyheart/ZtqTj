<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">

    <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->
        <!--<RelativeLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent">-->

            <!---->

        <!--</RelativeLayout>-->
    <!--</ScrollView>-->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.pcs.ztqtj.view.myview.MultiEditInputView
            android:id="@+id/id_meiv"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            app:maxCount="500">

        </com.pcs.ztqtj.view.myview.MultiEditInputView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:id="@+id/lay_disaster_pic"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    >
                    <LinearLayout
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        android:background="@drawable/btn_disaster_nor"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/iv_disaster_pic_show"
                            android:layout_width="match_parent"
                            android:scaleType="fitXY"
                            android:layout_height="match_parent"
                            android:visibility="gone"/>
                        <ImageView
                            android:id="@+id/iv_disaster_pic"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/btn_disaster_pic"/>

                        <TextView
                            android:id="@+id/tv_disater_pic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="+图片"
                            android:textColor="@color/text_black_common"
                            android:textSize="16dp"/>
                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_disaster_voice"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        android:background="@drawable/btn_disaster_nor"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/iv_disaster_voice_show"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:visibility="gone"/>
                        <ImageView
                            android:id="@+id/iv_disaster_voice"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/btn_disaster_voice"/>

                        <TextView
                            android:id="@+id/tv_disaster_voice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="+语音"
                            android:textColor="@color/text_black_common"
                            android:textSize="16dp"/>
                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_disaster_video"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                        <RelativeLayout
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/btn_disaster_nor"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/iv_paly_video_up"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginLeft="6dp"
                                android:layout_marginTop="6dp"
                                android:src="@drawable/bt_paly"
                                android:visibility="gone"
                                />

                            <ImageView
                                android:id="@+id/iv_disaster_video_show"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/btn_disaster_video"
                                android:visibility="gone"/>

                            <ImageView
                                android:id="@+id/iv_disaster_video"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/btn_disaster_video"/>

                            <TextView
                                android:layout_below="@+id/iv_disaster_video"
                                android:id="@+id/tv_disaster_video"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:text="+视频"
                                android:textColor="@color/text_black_common"
                                android:textSize="16dp"/>
                        </RelativeLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_disaster_type"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:background="@drawable/btn_disaster_type_sel"
                android:gravity="center"
                android:paddingBottom="@dimen/activity_margintop"
                android:paddingRight="@dimen/dimen6"
                android:paddingTop="@dimen/activity_margintop"
                android:text="选择灾情类型"
                android:textColor="@color/text_black"
                android:textSize="16dp"/>


            <LinearLayout

                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="灾情时间："
                    android:textSize="15dp"
                    android:textColor="@color/text_blue"/>

                <TextView
                    android:id="@+id/tv_disaster_up_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/text_black_common"/>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lay_disaster_address"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_disaster"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="灾情地点："
                android:textSize="15dp"
                android:textColor="@color/text_blue"/>

            <TextView
                android:id="@+id/tv_disaster_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="8"
                android:textSize="15dp"
                android:textColor="@color/text_black_common"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/disaster_up_street"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="4"
                android:background="@drawable/btn_disaster_type_sel"
                android:gravity="center"
                android:paddingBottom="@dimen/activity_margintop"
                android:paddingRight="@dimen/dimen20"
                android:paddingTop="@dimen/activity_margintop"
                android:text="县/区"
                android:textColor="@color/text_black"
                android:textSize="14dp"/>
            <TextView
                android:id="@+id/disaster_up_province"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="3"
                android:visibility="invisible"
                android:background="@drawable/btn_disaster_type_sel"
                android:gravity="center"
                android:paddingBottom="@dimen/activity_margintop"
                android:paddingRight="@dimen/dimen18"
                android:paddingTop="@dimen/activity_margintop"
                android:text="地市"
                android:textColor="@color/text_black"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/disaster_up_county"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="3"
                android:visibility="invisible"
                android:background="@drawable/btn_disaster_type_sel"
                android:gravity="center"
                android:paddingBottom="@dimen/activity_margintop"
                android:paddingRight="@dimen/dimen18"
                android:paddingTop="@dimen/activity_margintop"
                android:text="县/区"
                android:textColor="@color/text_black"
                android:textSize="14dp"/>



        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请认真核对灾情信息，确认无误后第一时间发布。"
                android:textColor="@color/text_gray"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/lay_disaster_manager_up"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_manage_release"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_disaster_up"
                android:text="发布"
                android:textColor="@color/text_white"
                android:textSize="16dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_manage_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_disaster_manager"
                android:text="管理我的上报信息"
                android:textColor="@color/text_white"
                android:textSize="16dp"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/lay_disaster_bottom"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lay_disaster_tg"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_disaster_tg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/text_gray"
                    android:singleLine="true"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/lay_disaster_bh"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_disaster_bh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/text_gray"
                    android:singleLine="true"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_disaster_sh"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center">


                <TextView
                    android:id="@+id/tv_disaster_sh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/text_gray"
                    android:singleLine="true"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
