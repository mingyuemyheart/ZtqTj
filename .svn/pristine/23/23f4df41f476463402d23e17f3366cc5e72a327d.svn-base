<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@drawable/line_common_v" />

    <TextView
        android:id="@+id/tv_data_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:paddingBottom="@dimen/activity_margintop"
        android:paddingTop="@dimen/activity_margintop"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_footnote" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@drawable/line_common_v" />

    <TextView
        android:id="@+id/tv_data_longitude"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:paddingBottom="@dimen/activity_margintop"
        android:paddingTop="@dimen/activity_margintop"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_footnote" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@drawable/line_common_v" />

    <TextView
        android:id="@+id/tv_data_latitude"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:paddingBottom="@dimen/activity_margintop"
        android:paddingTop="@dimen/activity_margintop"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_footnote" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@drawable/line_common_v" />

    <TextView
        android:id="@+id/tv_data_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:paddingBottom="@dimen/activity_margintop"
        android:paddingTop="@dimen/activity_margintop"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_footnote" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@drawable/line_common_v" />

    <TextView
        android:id="@+id/tv_data_strength"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:paddingBottom="@dimen/activity_margintop"
        android:paddingTop="@dimen/activity_margintop"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_footnote" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@drawable/line_common_v" />

</LinearLayout>