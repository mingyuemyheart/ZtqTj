package com.pcs.lib_ztqfj_v2.model.pack.net.typhoon;

import com.pcs.lib.lib_pcs_v3.model.pack.PcsPackDown;

import org.json.JSONArray;
import org.json.JSONException;
import org.json.JSONObject;

import java.util.ArrayList;
import java.util.List;



/**
 * 台风警戒线
 * 
 * @author JiangZY
 * 
 */
public class PackTyphoonWarnLineDown extends PcsPackDown {

	public class PackTyphoonWarnLineRow {
		public double longitude = 0;
		public double latitude = 0;
	}

	/**
	 * 颜色
	 */
	public String color;
	public String name = "";
	public double txt_longitude = 0;
	public double txt_latitude = 0;
	/**
	 * 坐标列表
	 */
	public List<PackTyphoonWarnLineRow> list = new ArrayList<PackTyphoonWarnLineRow>();

	@Override
	public void fillData(String jsonStr) {
		list.clear();
		try {
			JSONObject obj = new JSONObject(jsonStr);
			color = obj.getString("color");
			name = obj.getString("warn_name");
			txt_longitude = obj.getDouble("txt_lon");
			txt_latitude = obj.getDouble("txt_lag");
			JSONArray arr = obj.getJSONArray("warn_line_list");
			for (int i = 0; i < arr.length(); i++) {
				JSONObject temp = arr.getJSONObject(i);
				PackTyphoonWarnLineRow row = new PackTyphoonWarnLineRow();

				row.latitude = temp.getDouble("lag");
				row.longitude = temp.getDouble("lon");

				list.add(row);
			}
		} catch (JSONException e) {
			e.printStackTrace();
		}
	}

	@Override
	public String toString() {
		return null;
	}

}
