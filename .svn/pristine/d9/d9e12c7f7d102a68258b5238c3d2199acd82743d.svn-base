<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_title_pop">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:padding="@dimen/dimen6"
            android:text="统计说明"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_content" />

        <ImageView
            android:id="@+id/btn_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen16"
            android:layout_marginTop="@dimen/dimen2"
            android:src="@drawable/btn_delete" />
    </RelativeLayout>

    <TextView
        android:id="@+id/text_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="5dp"
        android:lineSpacingMultiplier="1.3"
        android:padding="@dimen/dimen6"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/line_common" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@mipmap/bg_title_pop"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen4"
            android:layout_weight="1"
            android:gravity="right"
            android:lines="1"
            android:paddingBottom="@dimen/dimen6"
            android:paddingTop="@dimen/dimen6"
            android:text="降雨强度等级"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_content" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@drawable/line_common_v" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen4"
                android:lines="1"
                android:paddingBottom="@dimen/dimen6"
                android:paddingTop="@dimen/dimen6"
                android:text="24小时降雨标准（单位:mm）"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_content" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/listview_pop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen8"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@color/alpha100"
        android:listSelector="@color/alpha100"></ListView>
</LinearLayout>
