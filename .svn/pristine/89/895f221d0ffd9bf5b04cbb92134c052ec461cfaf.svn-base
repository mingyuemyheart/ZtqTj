<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_bottom_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible"
            >

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen30"
                android:background="@drawable/btn_warning_center_bottom"
                android:gravity="center"
                android:text="预警分享"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_content"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/tv_push_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_warning_center_bottom"
                android:gravity="center"
                android:text="@string/push_settings"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_content"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/ll_bottom_button"
            >

            <RelativeLayout
                android:id="@+id/list_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ExpandableListView
                    android:id="@+id/expandlisview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dimen4"
                    android:cacheColorHint="@color/alpha100"
                    android:childDivider="@drawable/line_common"
                    android:divider="@color/bg_white"
                    android:dividerHeight="2px"
                    android:fadingEdge="none"
                    android:groupIndicator="@null"
                    android:listSelector="@color/alpha100"
                    android:scrollbars="none"
                    android:scrollingCache="false"/>

                <TextView
                    android:id="@+id/textnull"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/no_data"
                    android:textColor="@color/grey_text_color"
                    android:textSize="20dp"
                    android:visibility="gone"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_detail_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>

</RelativeLayout>