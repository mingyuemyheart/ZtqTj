<?xml version="1.0" encoding="utf-8"?>
<!-- 我的预警-管理页 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:orientation="vertical" >

    <!-- 个人中心 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/image_warning_manage"
        android:orientation="vertical"
        android:padding="@dimen/dimen20" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_welcome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/hint_welcome_unlogin"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_content" />

            <!-- 登陆 -->

            <TextView
                android:id="@+id/btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_login_03"
                android:gravity="center"
                android:padding="@dimen/dimen5"
                android:text="@string/login"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dimen10"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <!-- 用户头像 -->

            <ImageView
                android:id="@+id/image_user"
                android:layout_width="87dp"
                android:layout_height="87dp"
                android:src="@drawable/head_default"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <!-- 预警定制按钮 -->

    <LinearLayout
        android:id="@+id/layout_customize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen5"
        android:background="@drawable/btn_warning_customize"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen15"
        android:paddingRight="@dimen/dimen15" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/title_warning_customize"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_content" />

        <ImageButton
            android:id="@+id/btn_customize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_add_warning" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_no_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen60"
        android:lineSpacingExtra="4dp"
        android:paddingRight="@dimen/dimen15"
        android:paddingLeft="@dimen/dimen15"
        android:paddingBottom="@dimen/dimen15"
        android:lineSpacingMultiplier="1.3"
        android:text="@string/hint_no_warning_order"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_content"
        android:visibility="gone" />

    <!-- 推送状态 -->

    <LinearLayout
        android:id="@+id/layout_push"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dimen10" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_select_notice_state"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/text_content" />

        <CheckBox
            android:id="@+id/cb_push"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/checkbox_push"
            android:button="@null" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!-- 预警订单布局 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_white"
            android:orientation="vertical"
            android:padding="@dimen/dimen10" >

            <!-- 已支付订单列表 -->

            <LinearLayout
                android:id="@+id/layout_order_paid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_paid"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_content" />

                <ListView
                    android:id="@+id/listview_order_paid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen10"
                    android:divider="@null"
                    android:dividerHeight="@dimen/dimen10" />
            </LinearLayout>

            <!-- 未支付订单列表 -->

            <LinearLayout
                android:id="@+id/layout_order_unpaid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen10"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_unpaid"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_content" />

                <ListView
                    android:id="@+id/listview_order_unpaid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen10"
                    android:divider="@null"
                    android:dividerHeight="@dimen/dimen10" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>