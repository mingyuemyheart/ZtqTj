<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tv_month"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/month2"
        android:textColor="@color/text_black_common"
        android:textSize="@dimen/text_footnote"
        android:background="@drawable/border_right_top"
        />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/day2"
        android:textColor="@color/text_black_common"
        android:textSize="@dimen/text_footnote"
        android:background="@drawable/border_without_left"
        />

</LinearLayout>
