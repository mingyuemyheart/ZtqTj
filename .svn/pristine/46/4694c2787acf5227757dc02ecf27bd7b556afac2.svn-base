<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
        android:id="@+id/tv_feedback_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black_common"
        android:padding="@dimen/dimen10"
        android:singleLine="true"
        android:textSize="@dimen/text_footnote"/>
    <TextView 
        android:id="@+id/tv_feedback_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
        android:textColor="@color/text_gray"
        android:padding="@dimen/dimen10"
        android:text="@string/time"
        android:singleLine="true"
        android:textSize="12dp"/>
    <TextView 
        android:id="@+id/tv_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_feedback_name"
        android:textColor="@color/text_gray"
        android:paddingLeft="@dimen/dimen10"
        android:paddingRight="@dimen/dimen10"
        android:paddingBottom="@dimen/dimen10"
        android:text="@string/opinion"
        android:textSize="@dimen/text_footnote"/>
   
    

</RelativeLayout>
