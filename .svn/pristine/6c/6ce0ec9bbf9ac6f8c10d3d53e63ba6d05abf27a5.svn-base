<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_marginleft_right"
    android:paddingRight="@dimen/activity_marginleft_right" >

    <TextView
        android:id="@+id/myserver_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen10"
        android:layout_marginTop="@dimen/dimen10"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_content" />

    <!--<TextView-->
        <!--android:id="@+id/myserver_time"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@id/myserver_title"-->
        <!--android:layout_marginBottom="@dimen/dimen10"-->
        <!--android:textColor="@color/text_gray"-->
        <!--android:textSize="@dimen/text_footnote" />-->

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_below="@id/myserver_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/myserver_time"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_footnote" />
        <TextView
            android:id="@+id/tv_unit_flag"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_footnote"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@drawable/line_common" />

</RelativeLayout>