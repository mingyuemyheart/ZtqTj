<?xml version="1.0" encoding="utf-8"?>
<!-- 首页生活指数 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="70dp"
              android:background="@drawable/btn_life_number"
              android:orientation="horizontal"
              android:paddingLeft="@dimen/dimen10"
              android:paddingRight="@dimen/dimen10"
    >

    <ImageView
        android:id="@+id/image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="@dimen/dimen4"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/life_number"
            android:textColor="@color/text_white"
            android:textSize="@dimen/dimen16"/>

        <com.pcs.ztqtj.view.myview.FontFitTextView
            android:id="@+id/text_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/no_data"
            android:textColor="@color/text_life"
            android:textSize="@dimen/dimen15"/>
    </LinearLayout>

</RelativeLayout>