<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/city_name_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <TextView
            android:id="@+id/livequery_cityname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingBottom="@dimen/activity_margintop"
            android:paddingTop="@dimen/activity_margintop"
            android:textColor="@color/text_rain_blue"
            android:textSize="@dimen/text_footnote" />

        <Button
            android:id="@+id/more_cityinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_white"
            android:layout_margin="3dp"
            android:background="@drawable/btn_more"
            android:padding="0dp"
            android:text="@string/more" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/livequery_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/activity_margintop"
            android:paddingTop="@dimen/activity_margintop"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_footnote" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@drawable/line_common_v" />

        <TextView
            android:id="@+id/livequery_site"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/activity_margintop"
            android:paddingTop="@dimen/activity_margintop"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_footnote" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@drawable/line_common_v" />

        <TextView
            android:id="@+id/livequery_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/activity_margintop"
            android:paddingTop="@dimen/activity_margintop"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_footnote" />
    </LinearLayout>

</LinearLayout>