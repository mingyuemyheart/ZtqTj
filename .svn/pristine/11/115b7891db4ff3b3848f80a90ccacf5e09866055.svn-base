<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_white"
    >

    <TextView
        android:id="@+id/tv_push_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dimen10"
        android:textSize="@dimen/text_content"
        android:textColor="@color/text_blue"
        android:text="@string/push_tips"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/activity_margintop"
        android:layout_marginLeft="@dimen/dimen10"
        android:layout_marginRight="@dimen/dimen10"
        android:background="@color/bg_white"
        android:orientation="vertical"
        android:layout_above="@id/tv_push_tips"
        >

        <ListView
            android:id="@+id/list_push"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="1px"
            android:divider="@drawable/line_common">

        </ListView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@drawable/line_common"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/push_ringtone"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_content"/>

            <CheckBox
                android:id="@+id/cb"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/checkbox_commom"
                android:button="@null"
                android:textSize="@dimen/text_footnote"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
