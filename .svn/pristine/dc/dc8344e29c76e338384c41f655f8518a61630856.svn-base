<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="@dimen/dimen10"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 当前密码 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen10"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/old_password"
                android:textColor="@color/text_black_common"
                android:textSize="@dimen/text_content"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_input_bg"
                android:padding="@dimen/dimen8">

                <ImageButton
                    android:id="@+id/btn_clear_old_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/btn_clear_input"/>

                <EditText
                    android:id="@+id/et_old_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen8"
                    android:layout_toLeftOf="@id/btn_clear_old_password"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/input_tips_curr_pwd"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:password="true"
                    android:textColor="@color/text_black_login"
                    android:textColorHint="@color/hint"
                    android:textSize="@dimen/dimen15" />

            </RelativeLayout>
        </LinearLayout>

        <!-- 新密码 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen10"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/new_password"
                android:textColor="@color/text_black_common"
                android:textSize="@dimen/text_content"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_input_bg"
                android:padding="@dimen/dimen8">

                <ImageButton
                    android:id="@+id/btn_clear_new_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/btn_clear_input"/>

                <EditText
                    android:id="@+id/et_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen8"
                    android:layout_toLeftOf="@id/btn_clear_new_password"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/password_register_hint"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:password="true"
                    android:textColor="@color/text_black_login"
                    android:textColorHint="@color/hint"
                    android:textSize="@dimen/dimen15" />

            </RelativeLayout>
        </LinearLayout>

        <!-- 确认密码 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen10"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/confirm_password"
                android:textColor="@color/text_black_common"
                android:textSize="@dimen/text_content"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_input_bg"
                android:padding="@dimen/dimen8">

                <ImageButton
                    android:id="@+id/btn_clear_confirm_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/btn_clear_input"/>

                <EditText
                    android:id="@+id/et_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen8"
                    android:layout_toLeftOf="@id/btn_clear_confirm_password"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/repassword_hint"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:password="true"
                    android:textColor="@color/text_black_login"
                    android:textColorHint="@color/hint"
                    android:textSize="@dimen/dimen15" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>