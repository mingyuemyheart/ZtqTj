<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


    <RadioGroup
        android:id="@+id/radiogroups"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/btn_disaster_up"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/btn_disaster_reporting"
            android:button="@null"
            android:gravity="center"
            android:singleLine="true"
            android:layout_marginRight="5dp"
            android:checked="true"
            android:textColor="@color/text_black"
            android:textSize="16dp"/>



        <RadioButton
            android:id="@+id/btn_disaster_report"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/btn_disaster_reporting"
            android:button="@null"
            android:gravity="center"
            android:singleLine="true"
            android:layout_marginRight="5dp"
            android:textColor="@color/text_black"
            android:textSize="16dp"/>



        <RadioButton
            android:id="@+id/btn_disaster_info"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/btn_disaster_reporting"
            android:button="@null"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/text_black"
            android:textSize="16dp"/>

    </RadioGroup>

    <RelativeLayout
        android:id="@+id/fra_disaster"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/radiogroups">
    </RelativeLayout>


</RelativeLayout>
