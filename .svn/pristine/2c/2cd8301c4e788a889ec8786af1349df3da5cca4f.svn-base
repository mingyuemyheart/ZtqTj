<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_bottom_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_warning_center_bottom"
                android:layout_marginRight="@dimen/dimen30"
                android:gravity="center"
                android:text="@string/warning_query"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_content"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/tv_push_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_warning_center_bottom"
                android:gravity="center"
                android:text="@string/push_settings"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_content" />

        </LinearLayout>

    <RelativeLayout
        android:id="@+id/list_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_bottom_button"
        >

        <ListView
            android:id="@+id/warnlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@color/alpha100"
            android:divider="@color/bg_white"
            android:dividerHeight="2px"
            android:fadingEdge="none"
            android:groupIndicator="@null"
            android:listSelector="@color/alpha100"
            android:scrollbars="none"
            android:scrollingCache="false" />

        <TextView
            android:id="@+id/textnull"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/no_data"
            android:textColor="@color/text_black_common"
            android:textSize="20dp"/>

    </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    </LinearLayout>


</RelativeLayout>