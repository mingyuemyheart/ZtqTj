<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_bottom_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible"
        >

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_warning_center_bottom"
            android:gravity="center"
            android:text="@string/warning_query"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_content" />

        <TextView
            android:id="@+id/tv_push_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen30"
            android:background="@drawable/btn_warning_center_bottom"
            android:gravity="center"
            android:text="@string/push_settings"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_bottom_button"
        android:orientation="vertical" >

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView_yc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
        </HorizontalScrollView>

        <ListView
            android:id="@+id/warnlistview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@color/alpha100"
            android:divider="@drawable/line_common"
            android:dividerHeight="2px"
            android:listSelector="@color/alpha100" />

        <LinearLayout
            android:id="@+id/fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>